{
  "manifest_version": 3,
  "name": "FocusGuard",
  "version": "1.0",
  "description": "Gamified Productivity with Interception & Waiting Room",
 "permissions": [
  "storage",
  "tabs"
],
"host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons" : {
    "256": "focusguard.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html"
  }
}